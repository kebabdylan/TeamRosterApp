<h1>Projects</h1>

<div class="pull-right">
    <% link_to 'Add A New Project', new_project_path, :class=>"btn btn-success" %>
    <a class="btn btn-success" href="<%= new_project_path %>">
        <i class="icon-search icon-white"></i>  
        Add a New Project
    </a>
</div>
<div class="project-list list">
<% @projects.each do |project| %>
<div class="project list-item">
    <h3><%= project.title %></h3>
    <p><%= project.description %></p>
    <p>
        <%= project.website %><br />
        <%= project.svn %>
    </p>    
        <p>Team: <%= project.team.name %></p>
    
       <div class="actions" >
    <%= link_to 'Show', project, :class=>"btn" %>
    <%= link_to 'Edit', edit_project_path(project), :class=>"btn" %>
    <%= link_to 'Delete', project, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class=>"btn btn-danger" %>
</div>
</div>
<% end %>
</div>




