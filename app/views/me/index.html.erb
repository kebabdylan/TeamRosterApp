<p id="notice"><%= notice %></p>


<div class="span12">
	<h2><%= @member.full_name %></h2>
	<p>
	  <b>Email:</b> <%= @member.email %>
	</p>

	<p>
	  <b>Username:</b> <%= @member.username %>
	</p>
</div>

<div class="span12">

	<div class="span5 well well-small">
	<h2>Teams</h2>	
	<% unless @member.teams.empty? %>
		<ul class="light-block">
			<% @member.teams.each do |team| %>
				<li><%= team.name %></li>
			<% end %>
		</ul>

	<% end %>
	</div>

	<div class="span6 well well-small pull-left">
	<h2>Projects</h2>
	<% unless @member.projects.empty? %>
		<ul class="light-block">
			<% @member.projects.each do |project| %>
				<li>
					<%= project.title %><br/>
					<%= link_to "View Details", "/me/project/#{project.id}" %>
				</li>
			<% end %>
		</ul>
	<% else %>
	<p>There are no current projects</p>
	<% end %>
	</div>

</div>