<h1>Projects</h1>

<div class="pull-right">
    <% link_to 'Add A New Project', new_project_path, :class=>"btn btn-success" %>
    <a class="btn btn-success" href="<%= new_project_path %>">
        <i class="icon-search icon-white"></i>  
        Add a New Project
    </a>
</div>

<table class="table table table-striped">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Website</th>
    <th>Svn</th>
    <th>Team</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><%= project.title %></td>
    <td><%= project.description %></td>
    <td><%= project.website %></td>
    <td><%= project.svn %></td>
    <td><%= project.team.name %></td>
    <td><%= link_to 'Show', project, :class=>"btn" %></td>
    <td><%= link_to 'Edit', edit_project_path(project), :class=>"btn" %></td>
    <td><%= link_to 'Delete', project, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class=>"btn btn-danger" %></td>
  </tr>
<% end %>
</table>

<br />


