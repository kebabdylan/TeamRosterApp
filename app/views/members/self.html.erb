<p id="notice"><%= notice %></p>

<h2>
  <%= @member.full_name %>
</h2>

<p>
  <b>Email:</b>
  <%= @member.email %>
</p>

<p>
  <b>Username:</b>
  <%= @member.username %>
</p>



<% unless @member.teams.empty? %>
	<h3>Teams</h3>
	<ul class="light-block">
		<% @member.teams.each do |team| %>
			<li><%= team.name %></li>
		<% end %>
	</ul>

<% end %>


<%= link_to 'Edit', edit_member_path(@member) %> |
<%= link_to 'Back', members_path %>
